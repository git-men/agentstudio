/var/log/agent-studio/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    copytruncate
    su agent-studio agent-studio
    postrotate
        # Send USR1 signal to reload logs if service is running
        if systemctl is-active --quiet agent-studio; then
            systemctl reload agent-studio
        fi
    endscript
}