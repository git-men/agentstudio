[Unit]
Description=Agent Studio Backend
Documentation=https://github.com/git-men/agentstudio
After=network.target

[Service]
Type=simple
User=agent-studio
Group=agent-studio
WorkingDirectory=/opt/agent-studio
Environment=NODE_ENV=production
EnvironmentFile=/etc/agent-studio/config.env
ExecStart=/usr/bin/node backend/dist/index.js
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGINT
TimeoutStopSec=5
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/agent-studio/output.log
StandardError=append:/var/log/agent-studio/error.log
SyslogIdentifier=agent-studio

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/agent-studio /opt/slides /etc/agent-studio
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target